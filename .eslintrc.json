{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "es2022": true,
        "browser": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "version": "18"
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
        "eol-last": ["error", "always"],
        "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
        "curly": ["error", "all"],
        "linebreak-style": ["error", "unix"]
    }
}
